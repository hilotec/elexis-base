<project name="elexis-mail" default="all">
	<property name="sourcedir" value="${source}/elexis-mail/" />
	<property name="plugindir" value="${dist}/plugins/ch.elexis.mail_${version}" />



	<target name="all">
		<ant antfile="../BuildElexis/rsc/build/build.xml" target="copy_plugin">
			<property name="copydest" value="${plugindir}" />
			<property name="copysrc" value="${sourcedir}" />
		</ant>
		<javac srcdir="${sourcedir}" destdir="${plugindir}" debug="${debug}" optimize="${optimize}" target="1.5" encoding="UTF-8">
			<classpath>
				<path refid="eclipseclasses" />
				<fileset dir="${plugindir}">
					<include name="*.jar" />
				</fileset>
			</classpath>
		</javac>
		<tstamp />
		<zip basedir="${plugindir}" destfile="${updatefiles}/ch.elexis.mail_${version}.${DSTAMP}.zip" />

	</target>
</project>
<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<fragment>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="ch.elexis.icpc.fire.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="ch.elexis.icpc.fire.commands.category"
            id="ch.elexis.icpc.fire.commands.sampleCommand"
            name="Sample Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ch.elexis.icpc.fire.handlers.ExportFireHandler"
            commandId="ch.elexis.icpc.fire.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="ch.elexis.icpc.fire.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               icon="icons/fire.png"
               id="ch.elexis.icpc.fire.menus.sampleMenu"
               label="Sample Menu"
               mnemonic="M">
            <command
                  commandId="ch.elexis.icpc.fire.commands.sampleCommand"
                  id="ch.elexis.icpc.fire.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="ch.elexis.icpc.fire.toolbars.sampleToolbar">
            <command
                  commandId="ch.elexis.icpc.fire.commands.sampleCommand"
                  icon="icons/fire.png"
                  id="ch.elexis.icpc.fire.toolbars.sampleCommand"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</fragment>
